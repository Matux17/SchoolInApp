<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Vocabulary"
        android:background="@drawable/background">

    <ImageButton
            android:layout_width="125dp"
            android:layout_height="125dp"
            app:layout_constraintTop_toBottomOf="@id/Word"
            app:layout_constraintRight_toLeftOf="@id/ButtonImage2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="@id/ButtonImage3"
            android:layout_marginTop="10dp"
            android:background="@android:color/transparent"
            android:src="@drawable/apple"
            android:scaleType="fitXY"
            android:id="@+id/ButtonImage1"
            android:onClick="Click1"
            android:visibility="gone"
            android:clickable="true"
    />

    <ImageButton
            android:layout_width="125dp"
            android:layout_height="125dp"
            app:layout_constraintTop_toBottomOf="@id/Word"
            app:layout_constraintLeft_toRightOf="@id/ButtonImage1"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/ButtonImage4"
            android:layout_marginTop="10dp"
            android:background="@android:color/transparent"
            android:src="@drawable/apple"
            android:scaleType="fitXY"
            android:id="@+id/ButtonImage2"
            android:onClick="Click2"
            android:visibility="gone"
            android:clickable="true"
    />

    <ImageButton
            android:layout_width="125dp"
            android:layout_height="125dp"
            app:layout_constraintTop_toBottomOf="@id/ButtonImage1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/ButtonImage4"
            app:layout_constraintBottom_toTopOf="@id/Answer"
            android:layout_marginTop="10dp"
            android:background="@android:color/transparent"
            android:src="@drawable/apple"
            android:scaleType="fitXY"
            android:id="@+id/ButtonImage3"
            android:onClick="Click3"
            android:visibility="gone"
            android:clickable="true"
    />

    <ImageButton
            android:layout_width="125dp"
            android:layout_height="125dp"
            app:layout_constraintTop_toBottomOf="@id/ButtonImage2"
            app:layout_constraintLeft_toRightOf="@id/ButtonImage3"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/Answer"
            android:layout_marginTop="10dp"
            android:background="@android:color/transparent"
            android:src="@drawable/apple"
            android:scaleType="fitXY"
            android:id="@+id/ButtonImage4"
            android:onClick="Click4"
            android:visibility="gone"
            android:clickable="true"
    />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@id/ButtonImage2"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textAllCaps="true"
            android:textSize="16sp"
            android:fontFamily="sans-serif-medium"
            android:id="@+id/Word"
    />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ButtonImage3"
            android:id="@+id/Answer"
    />

    <ImageButton
            android:layout_width="100dp"
            android:layout_height="40dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/Answer"
            android:background="@android:color/transparent"
            android:scaleType="fitXY"
            android:src="@drawable/button_next_blue"
            android:id="@+id/Next"
            android:visibility="gone"
            android:onClick="ClickNext"
    />

    <ImageButton
            android:layout_width="100dp"
            android:layout_height="40dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/Answer"
            android:background="@android:color/transparent"
            android:scaleType="fitXY"
            android:src="@drawable/button_tryagain_blue"
            android:id="@+id/TryAgain"
            android:visibility="gone"
            android:onClick="ClickTryAgain"
    />

    <ImageButton
            android:layout_width="100dp"
            android:layout_height="40dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@android:color/transparent"
            android:scaleType="fitXY"
            android:src="@drawable/button_play"
            android:id="@+id/Play"
            android:visibility="visible"
            android:onClick="ClickPlay"
    />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="Congratulations! You finished this level!"
            android:id="@+id/NextLevelWarning"
            android:visibility="gone"
    />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="15sp"
            android:id="@+id/Score"/>

</android.support.constraint.ConstraintLayout>